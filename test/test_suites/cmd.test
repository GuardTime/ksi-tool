# Misuse of command-line.

## 1
# Nr. 1
# Check if task / command typo suggestions are displayed without '--' suffix
# (e.g. '--sign' instead of 'sign').
##
EXECUTABLE signx
>>>2 /(.*Error)(.*Invalid task)(.*Read help.*)
(.*Did [yY]ou mean)(.*'sign')(.*instead of)(.*'signx')/
>>>= 3

EXECUTABLE onf
>>>2 /(.*Error)(.*Invalid task)(.*Read help.*)
(.*Did [yY]ou mean)(.*'conf')(.*instead of)(.*'onf')/
>>>= 3

EXECUTABLE erify
>>>2 /(.*Error)(.*Invalid task)(.*Read help.*)
(.*Did [yY]ou mean)(.*'verify')(.*instead of)(.*'erify')/
>>>= 3

EXECUTABLE ectendf
>>>2 /(.*Error)(.*Invalid task)(.*Read help.*)
(.*Did [yY]ou mean)(.*'extend')(.*instead of)(.*'ectendf')/
>>>= 3

EXECUTABLE pubfiaile
>>>2 /(.*Error)(.*Invalid task)(.*Read help.*)
(.*Did [yY]ou mean)(.*'pubfile')(.*instead of)(.*'pubfiaile')/
>>>= 3

## 6
# Nr. 2
# Check if task / command with "--" prefix generates an error.
##
EXECUTABLE --sign
>>>2 /(.*Error)(.*Invalid task)(.*Read help.*)
(.*Did [yY]ou mean)(.*'sign')(.*instead of)(.*'--sign')/
>>>= 3